                    app.root.current = "second_window"
                    root.manager.transition.direction = "left"
        BoxLayout:
            padding:50,150,50,50
            Button:
                id:texttospeech_btn
                text:"Text to Speech"
                background_normal:""
                background_color:(0.94117647058,0.94117647058,0.94117647058,.1)
                font_name:"Roboto-Medium"
                font_size:20
                size_hint:0.5,0.15
                pos_hint:{"top":0.75,"centre_x":0.5}
                on_release:
                    app.root.current = "third_window"
                    root.manager.transition.direction = "left"
        BoxLayout:
            padding:100,150,100,50
            Button:
                id:exitapp_btn
                text:"Exit"
                background_normal:""
                background_color:(0.94117647058,0.94117647058,0.94117647058,.1)
                font_name:"Roboto-Medium"
                font_size:20
                size_hint:0.1,0.15
                pos_hint:{"top":0.25,"centre_x":0.5}
                on_release:
                    app.root.exit()
        BoxLayout:
            padding:100,150,100,50
            Button:
                id:aboutus_btn
                text:"About Us"
                background_normal:""
                background_color:(0.94117647058,0.94117647058,0.94117647058,.1)
                font_name:"Roboto-Medium"
                font_size:20
                size_hint:0.1,0.15
                pos_hint:{"top":0.5,"centre_x":0.5}
                on_release:
                    app.root.current = "fourth_window"
            
        Button:
            background_normal:"home-icon.webp"
            background_down:"home-icon.webp"
            size_hint:0.2,0.1
            pos_hint:{"top":0.994,"left":1}
            on_release:
                app.root.current = "mainwindow"
                root.manager.transition.direction = "right"
        Label:
            text:"v1.1-Beta"
