        canvas:
            Color:
                rgba:0.16862745098,0.16862745098,0.16862745098,1
            Rectangle:
                pos:self.pos
                size:self.size
    BoxLayout:
        pos_hint:{'top':1.456}
        size_hint:2,0.57
        canvas:
            Color:
                rgba:0.09803921568,0.13725490196,0.17647058823,1
            Rectangle:
                pos:self.pos
                size:self.size
        
    FloatLayout:
        BoxLayout:
            
            orientation:'horizontal'
            padding:5,0,0,0
            Label:
                text:"audibuddy"
                font_name:"Roboto-Thin"
                font_size:35
                pos_hint:{"top":1.45,"left":1}
        
        Widget:
        Widget:
    
    FloatLayout:
        BoxLayout:
            padding:50,150,50,50
            Button:
                id:speechtotext_btn
                text:"Speech to Text"
                background_normal:""
                background_color:(0.94117647058,0.94117647058,0.94117647058,.1)
                font_name:"Roboto-Medium"
                font_size:20
                size_hint:0.5,0.15
                pos_hint:{"top":1,"centre_x":0.5}
